@page "/employees"
@using WorkLog.Bll.Models
@using WorkLog.Bll.Services
@using WorkLog.Dal.Entities
@using WorkLog.Dal.Repositories

<h1>Workers List</h1>
<br>

@if (_employees == null)
{
    <p>Click Load to see all employees</p>
}
<span>
    <button class="btn btn-primary" @onclick="GetEmployees">Load</button>
    <br>
    <button class="btn btn-primary" @onclick="AddEmployeesContent">Add new</button>
    <br>
</span>

@if (_employees == null)
{

}
else
{
    <p>Currently @_employeesCount employees work</p>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Position</th>
                <th>Hourly Wage</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in _employees.OrderBy(e => e.InternalId))
            {
                <tr>
                    <td>@employee.InternalId</td>
                    <td>@employee.FirstName</td>
                    <td>@employee.LastName</td>
                    <td>@employee.Position</td>
                    <td>@employee.HourlyWage</td>

                </tr>
            }
            @if (isAddNewPressed)
            {
                <tr>
                    <td><i>@_employeesNextId</i></td>
                    <td><input type="text" id="myText" value=@_firstName></td>
                    <td><input type="text" id="myText" value=@_lastName></td>
                    <td><input type="text" id="myText" value=@_position></td>
                    <td><input type="text" id="myText" value=@_hourlyWage></td>
                    <div><button class="btn btn-primary" @onclick="AddEmployees">Save changes</button></div>
                </tr>
            }
        </tbody>
        <tbody>


        </tbody>

    </table>
}